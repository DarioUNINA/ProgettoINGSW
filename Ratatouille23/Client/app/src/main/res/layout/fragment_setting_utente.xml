<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.Setting.SettingRistoranteFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUtente"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="90dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/imageViewUtente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_person" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNomeUtente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Utente"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewPwdAttuale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/editTxtPwdAttuale"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:hint="Password attuale"
            android:drawablePadding="12dp"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#968C8C"
            android:textSize="22dp"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/editNuovaPwd"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:hint="Nuova Password"
            android:drawablePadding="12dp"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#968C8C"
            android:textSize="22dp"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/editTxtConfermaPwd"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:hint="Conferma Password"
            android:drawablePadding="12dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#968C8C"
            android:textSize="22dp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>