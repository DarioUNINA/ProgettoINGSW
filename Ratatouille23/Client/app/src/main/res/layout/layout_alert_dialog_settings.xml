<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="500dp"
    app:cardCornerRadius="30dp"
    app:strokeColor="#000000"
    app:strokeWidth="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSettingsUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#79C4FF">

    <com.google.android.material.tabs.TabItem
        android:id="@+id/LogUserItemSetting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        android:background="@drawable/ic_baseline_person"/>

    <TextView
        android:id="@+id/txtNomeUtenteSetting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Utente"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="70dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangePass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/white"
        android:hint="Change Password"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="157dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogOut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:background="@drawable/stroke"
        android:backgroundTint="@color/red"
        android:hint="Log Out"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="249dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

