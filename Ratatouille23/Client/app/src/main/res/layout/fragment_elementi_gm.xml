<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/categorie_layout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".View.Fragment.FragmentGestioneMenu.ElementiMenuFragment"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELEMENTI"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDINA PER:"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.514" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPrezzoCrescente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D9D9D9"
                    android:src="@drawable/prezzo_crescente"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.530"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="30dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPrezDecrescente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D9D9D9"
                    android:src="@drawable/prezzo_decrescente"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.680"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="30dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnOrdineAlfaCrescente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D9D9D9"
                    android:src="@drawable/ordine_alfabetico_crescente"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.830"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="30dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnOrdineAlfaDecrescente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D9D9D9"
                    android:src="@drawable/ordine_alfabetico_decrescente"
                    app:borderWidth="0dp"
                    app:fabCustomSize="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.980"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="30dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:layout_width="390dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/line_1"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.99" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="437dp"
                android:layout_marginTop="78dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewElementiGM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="450dp"
                android:layout_height="80dp"
                android:backgroundTint="#79C4FF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="515dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/line_1"
                    android:layout_gravity="center"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnAddElement"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#01FD56"
                    app:fabCustomSize="50dp"
                    android:src="@drawable/baseline_add_24"
                    app:tint="@color/white"
                    app:borderWidth="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="60dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnRemoveElement"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#FF0000"
                    android:src="@drawable/__icon__minus_outline_"
                    app:borderWidth="0dp"
                    app:tint="@color/white"
                    app:fabCustomSize="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="60dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAnnullaRimozione"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="ANNULLA"
                    android:textColor="@color/black"
                    android:backgroundTint="#79C4FF"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"
                    android:shadowColor="#79C4FF"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnConfermaRimozione"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="CONFERMA"
                    android:textColor="@color/black"
                    android:backgroundTint="#79C4FF"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="-10dp"
                    android:shadowColor="#79C4FF"
                    />


            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:id="@+id/toast_root">

        <ImageView
            android:id="@+id/toast_image"
            android:layout_width="227dp"
            android:layout_height="92dp"
            android:src="@drawable/logo_completo" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:text="this is a custom toast"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    </LinearLayout>